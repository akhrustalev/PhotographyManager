@model PhotographyManager.Model.Album

@{
    ViewBag.Title = "AddAlbum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Album</title>
</head>
<body>
    <div>
        <form method="post" enctype="multipart/form-data" action=@Url.Action("AddAlbumToUser","Home")>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <ul>
                <li>
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </li>
                <li>
                    @Html.LabelFor(m => m.Discription)
                    @Html.TextBoxFor(m => m.Discription)
                    @Html.ValidationMessageFor(m => m.Discription)
                </li>

            </ul>
            <INPUT type="submit" value="Add Album" runat="server" id="Button1" class="class="btn btn-primary">
        </form>
    </div>
</body>
</html>