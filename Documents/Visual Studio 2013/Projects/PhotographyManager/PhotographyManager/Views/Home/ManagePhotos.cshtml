   <div>
       <form method="post" enctype="multipart/form-data" action="/Home/Upload/@Model.ID.ToString()">
           <input id="OriginalLocation" type="file"
                  size="28" name="OriginalLocation" runat="server">
           <INPUT type="submit" value="Upload" runat="server" id="Button1">

           <br />
           @using (Html.BeginForm())
           {

                   int count1 = Model.Photo.Count;
                   for (int i = 0; i < count1; i++)
                   {
                       <img src="/Home/ShowPhoto/@Model.ID.ToString()?photoNumber=@i.ToString()" alt="" width="200" height="200"/>
                     
                   }
           }
           <br />
            
       </form>
     <br />
       @Html.ActionLink("Manage Albums", "ManageAlbums", new { Id = Model.ID }, null)

   </div>



