@model PhotographyManager.Model.Photo

<figure style="display:inline-block; border:none">
    <img src=@Url.Action("ShowMiniPhoto","Photo", new {id=Model.ID}) alt="" />
    <figcaption style="text-align: center; border: none; font-family:'Times New Roman'">
        @Html.ActionLink("Edit Properties", "EditPhotosProperties", "Photo", new { id = Model.ID }, null)
        <br />
        @Html.ActionLink("Delete", "DeletePhoto", "Photo", new { id = Model.ID }, null)
    </figcaption>
</figure>