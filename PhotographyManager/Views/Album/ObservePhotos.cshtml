@model  PhotographyManager.Model.Album

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Observe Photos</title>
    
    <script type="text/javascript">
    $(function () {
        var BlockNumber = 2;
        var inProgress = false;;
        var blockSize = Math.ceil($(window).height() / 300) * Math.ceil($(window).width()/300);
        $(window).scroll(function () {
            if ($(window).scrollTop() == $(document).height() -
            $(window).height() && !inProgress) {
                event.preventDefault();
                inProgress = true;
                $.ajax({
                    type: "GET",
                    url: "@Url.HttpRouteUrl("DefaultApi", new {controller="LoadingPhotos" })",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: { BlockNumber: BlockNumber, AlbumName: "@Model.Name" ,BlockSize:blockSize},
                    success: function (res) {
                        BlockNumber = BlockNumber + 1;
                        var i = 0;
                        for (var key in res) {
                            i++;
                            var url1 = "@Url.Action("ShowMiniPhoto","Photo")" + "/" + res[key];
                            var url2 = "@Url.Action("ShowCurrentPhoto","Photo")" + "/" + res[key] + "?ind=" + (BlockNumber - 1) *blockSize+i;
                            $.ajax({
                                 url: url2,
                                 type: "GET",
                                 async: false,
                                 success: function (data) { $("#photosDiv").append("<figure style='display:inline-block; border:none; vertical-align:top'><img src=" + url1 + " alt='' id=" + res[key] + "/><figcaption style='text-align: center; border:none'>" + data + "</figcaption></figure>") }
                                })
                        }
                        inProgress = false;
                    }
                });
            }
        })
    })
    </script>
    <script type="text/javascript">
        $(function () {
            var BlockNumber = 1;
            var blockSize = Math.ceil($(window).height() / 300) * Math.ceil($(window).width() / 300);
            $.ajax({
            type: "GET",
